<view class="person_container">

    <!-- <view class="personIndex_container"  wx:for="{{11}}" >
      {{item}}
    </view> -->

    <view class="person_container_left">
      <view class="person_container_left--input" >
        <input type="text" placeholder="输入城市或站点首字母"/>
      </view>

      <view class="person_container_left--word" >
        <view class="word_item" wx:for="{{alphabet}}">
          {{item}}
        </view>

        <view class="word_delete" >
          <image class="" style="width: 100%; height: 100%" src="https://image.chebada.com/image/xiaochengxu/v470/icon_map_Locate@2x.png" >
            
          </image>  
        </view>
      </view>
    </view>

    <view class="person_container_right" >
      <view class="right_label--search" hover-class="none" hover-stop-propagation="false">
        热门搜索
      </view>

      <view class="right_item_container" >
        <view class="right_item" wx:for="{{cityArr}}">
          {{item}}
        </view>
      </view>
    </view>

</view>


