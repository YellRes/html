Page {
  height: 100%;
  background-color: #151515;
  justify-content: center;
}

.select-date {
  width: 100%;
  height: 75vh;
  padding: 0 40px;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.tab-bar {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tab-box {
  width: 31.9444vh;
  height: 35.2778vh;
  border-radius: 6.9444vh;
  padding: 1.3889vh;
  box-sizing: border-box;
  text-align: center;
  background-color: #3b3d4f;
}

.tab {
  width: 100%;
  line-height: 32.5vh;
  border-radius: 5.5556vh;
  font-size: 4.1667vh;
  color: #fff;
}

.selected {
  background-color: #4ec7ff;
}

.calendar {
  background-color: #3b3d4f;
  width: calc(100% - 37.5vh);
  border-radius: 6.9444vh;
  padding: 4.1667vh 2.2222vh;
  box-sizing: border-box;
  text-align: center;

}

.week {
  display: inline-block;
  width: calc(100% / 7);
  font-size: 5.5556vh;
  font-weight: 600;
  color: #898b95;
  margin-bottom: 4.1667vh;
}

.day-box {
  width: calc(100% / 7);
  display: inline-block;
  font-size: 4.1667vh;
  padding: 0 2.2222vh;
  box-sizing: border-box;
  margin-bottom: 2.2222vh;
}

.day {
  color: #fff;
  background-color: #2d303f;
  line-height: 7.5vh;
  border-radius: 2.0833vh;
}

.hide {
  visibility: hidden;
}

.active {
  background-color: #4ec7ff;
  color: #fff;
}